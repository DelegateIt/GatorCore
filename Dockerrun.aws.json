{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "apisource",
      "host": {
        "sourcePath": "/var/app/current/apisource"
      }
    },
    {
      "name": "delgtsource",
      "host": {
        "sourcePath": "/var/app/current/delgtsource"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "api",
      "image": "delegateit/gatapi",
      "environment": [
        {
          "name": "GATOR_CONFIG_PATH",
          "value": "/var/gator/api/aws-prod-config.json"
        }
      ],
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 8000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "apisource",
          "containerPath": "/var/gator/api",
          "readOnly": true
        }
      ],
      "authentication": {
        "bucket": "gator-secrets",
        "key": "docker-auth-config.json"
      }
    },
    {
      "name": "ntfy",
      "image": "delegateit/gatntfy",
      "environment": [
        {
          "name": "GATOR_CONFIG_PATH",
          "value": "/var/gator/api/aws-prod-config.json"
        }
      ],
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8060,
          "containerPort": 8060
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "apisource",
          "containerPath": "/var/gator/api",
          "readOnly": true
        }
      ],
      "authentication": {
        "bucket": "gator-secrets",
        "key": "docker-auth-config.json"
      }
    },
    {
      "name": "delgt",
      "image": "delegateit/gatdelgt",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "delgtsource",
          "containerPath": "/var/gator/delegator",
          "readOnly": true
        }
      ],
      "authentication": {
        "bucket": "gator-secrets",
        "key": "docker-auth-config.json"
      }
    },
  ]
}
