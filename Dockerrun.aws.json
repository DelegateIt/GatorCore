{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "apisource",
      "host": {
        "sourcePath": "/var/app/current/apisource"
      }
    },
    {
      "name": "delgtsource",
      "host": {
        "sourcePath": "/var/app/current/delgtsource/www"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "api",
      "image": "delegateit/gatapi:v1.10",
      "environment": [
        {
          "name": "GATOR_CONFIG_PATH",
          "value": "/var/gator/api/aws-prod-config.json"
        }
      ],
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "apisource",
          "containerPath": "/var/gator/api",
          "readOnly": true
        }
      ],
      "authentication": {
        "bucket": "gator-secrets",
        "key": "docker-auth-config.json"
      }
    },
    {
      "name": "ntfy",
      "image": "delegateit/gatntfy:v1.10",
      "environment": [
        {
          "name": "GATOR_CONFIG_PATH",
          "value": "/var/gator/api/aws-prod-config.json"
        }
      ],
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8060,
          "containerPort": 8060
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "apisource",
          "containerPath": "/var/gator/api",
          "readOnly": true
        }
      ],
      "authentication": {
        "bucket": "gator-secrets",
        "key": "docker-auth-config.json"
      }
    },
    {
      "name": "delgt",
      "image": "delegateit/gatweb:v1.10",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 80
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "delgtsource",
          "containerPath": "/usr/share/nginx/html",
          "readOnly": true
        }
      ],
      "authentication": {
        "bucket": "gator-secrets",
        "key": "docker-auth-config.json"
      }
    }
  ]
}
